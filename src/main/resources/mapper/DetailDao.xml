<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.space.demo.dao.DetailDao">
   <insert id="addDetail" parameterType="detail">
       insert into space_technology(type,name,content,imgsrc) values(#{type},#{name},#{content},#{imgsrc})
   </insert>

   <delete id="deleteByName">
       delete from space_technology where name=#{name}
   </delete>

   <delete id="deleteById">
       delete from space_technology where id=#{id}
   </delete>

   <select id="getOne">
       select * from space_technology where name=#{name}
   </select>

   <select id="getAll" resultType="detail">
       select * from space_technology
   </select>
</mapper>